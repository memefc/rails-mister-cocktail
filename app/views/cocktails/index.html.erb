<div class="container text-center">
<h1>Cocktails</h1>
<div class="row">
<% @cocktails.each do |cocktail| %>
<div class="col-4 d-inline-flex flex-column" style="height: 300px;">
<div class="card">
<div class="card-body">
<div class="card-title">
<%= cocktail.name %>
</div>
<%= link_to 'Show', cocktail %>
<%= link_to 'X', cocktail_path(cocktail), method: :delete %>
</div>
</div>
</div>
<% end %>
</div>



<%= link_to 'Add a Cocktail', new_cocktail_path %>
</div>
